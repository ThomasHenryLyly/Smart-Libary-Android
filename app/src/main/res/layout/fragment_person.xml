<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonFragment"
    android:background="@color/colorpage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimary">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rltLayOut2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="120dp"
            >
            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_photo_camera"
                android:background="@color/colorAccent"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/txtNameAvatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgAvatar"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/txtEmailAvatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgAvatar"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/txtNameAvatar"
                android:layout_marginTop="5dp"
                android:text="email"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/txtNganhAvatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgAvatar"
                android:layout_below="@+id/txtEmailAvatar"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Mechatronics"
                android:textSize="15dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rltLayOut2"
            android:layout_marginTop="20dp"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rvButtonProfileList"/>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>