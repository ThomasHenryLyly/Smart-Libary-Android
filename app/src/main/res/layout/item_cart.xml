<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F3F3">
            <ImageView
                android:id="@+id/imgHinhCart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_menu_gallery"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/txtNameBookCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgHinhCart"
                android:layout_marginLeft="20dp"
                android:text="Name"
                android:textColor="#0E0E0E"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtChuTacGiaCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNameBookCart"
                android:layout_toRightOf="@+id/imgHinhCart"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/author"
                android:textColor="#000000"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/txtTenTacGiaCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtChuTacGiaCart"
                android:layout_below="@+id/txtNameBookCart"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="Nguyễn Minh Tuấn"
                android:textColor="#000000"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtChuDate"
                android:layout_below="@+id/txtTenTacGiaCart"
                android:layout_marginTop="25dp"
                android:text="10-10-2020"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#0E0E0E"
                />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/txtChuTacGiaCart"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_delete_black_24dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>