<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFF">
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/rltLayOut4"
            android:layout_centerVertical="true"
            android:background="@drawable/khung_bk_notification">
            <ImageView
                android:id="@+id/imgNotification"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_logono"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txtContextNotification"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/rltLayOut4"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="nguyen minh tuan"
            android:textSize="25dp"
            android:textColor="#000000"
            android:background="#E1F5FD"/>

    </RelativeLayout>

</LinearLayout>